<div class="contanier cstm-container">
    <div class="content-btn">
        <a class="btn cstm-btn" href="/signin">
            <i class="fas fa-reply white-text"></i>
        </a>
    </div>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="gfont">Sign Up</h3>
                </div>

                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="mb-3">
                            <input type="text" name="fullname" placeholder="Full Name" class="form-control" autofocus>
                        </div>

                        <div class="mb-3">
                            <input type="text" name="username" placeholder="User Name" class="form-control">
                        </div>

                        <div class="mb-3">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>

                        <div class="mb-3">
                            <button class="btn cstm-btn btn-block">
                                Sign Up
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>