<div class="contanier p-4">
    <div class="row">
        <div class="col-xl-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/area/edit/{{area.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Title" value={{area.title}}>
                        </div>

                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descriptions">{{area.description}}</textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>