<div class="contanier cstm-container">
    <div class="content-btn">
        <a class="btn cstm-btn" href="/links/list">
            <i class="fas fa-reply white-text"></i>
        </a>
    </div>
    <div class="row">
        <div class="col-xl-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
